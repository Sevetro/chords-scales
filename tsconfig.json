{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "types": ["index.d.ts"]
  },
  "include": [
    "src"
  ]
}