{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "outDir": ".",
    "rootDir": "src",
    "declaration": true,
    "types": ["node"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ],
}